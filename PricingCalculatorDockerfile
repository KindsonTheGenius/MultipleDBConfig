FROM node:14 as build
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm i
COPY . .
RUN node_modules/.bin/nx build pricing-calculator-cushions --prod
RUN npm run build:elements:pricing-calculator-cushions

FROM nginx:1.17.1-alpine
COPY pricing-calculator-nginx.conf /etc/nginx/nginx.conf
COPY --from=build /usr/src/app/elements /usr/share/nginx/html
EXPOSE 80
